include head
include jumbo2   
block user 
    .bg-image.list1
        .container 
            #{data}
            .row
        #welcome Welcome Back, #{user.firstName}
        p
            | Double-click to move item from one list to the bottom of the other.
            br
            br

    .bg-image-color4 
        br
        .container
            .row
                .lg-col-4
                    .grocery-add
                        label Add to List:
                        form(class="create-form" action="/api/newitem" method="POST")
                            .form-group
                                //- label Burger Name:
                                input(type="text" name="name")
                                br
                                button(type="submit") Add it
                .lg-col-4
                    .left
                        label Add to List:
                        ul#allGroceries.grocery-list 
                            #{data}
                            for item, i in items
                                li(class="item" data-id=item.id)=item.name
    
                .lg-col-4
                    .right 
                        label Your Shopping List: 
                        ul#userGroceries.grocery-list
                            #{data}
                            for list, i in userList
                                if list.onList
                                    li(class="item" data-id=list.itemId)=list.item.name

                .lg-col-4
                    .right 
                        label In Your Cart: 
                        ul#groceryCart.grocery-list
                            #{data}
                            for list, i in userList
                                if list.inCart
                                    li(class="item" data-id=list.itemId)=list.item.name

